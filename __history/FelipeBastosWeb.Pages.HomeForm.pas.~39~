  FMX.ListView.Types, FMX.ListView.Appearances, FMX.ListView.Adapters.Base,
  FMX.ListView,
  FelipeBastosWeb.Pages.CondominiumListForm, FelipeBastosWeb.Pages.UnitListForm,
  FMX.TabControl, FMX.Objects;

type
  THomeForm = class(TRestrictForm)
    Header1: THeader;
    HeaderItem1: THeaderItem;
    HeaderItem2: THeaderItem;
    TabControl1: TTabControl;
    TabItem1: TTabItem;
    TabItem2: TTabItem;
    VertScrollBox1: TVertScrollBox;
    Panel2: TPanel;
    Label1: TLabel;
    Label2: TLabel;
    Rectangle1: TRectangle;
    Image2: TImage;
    Panel3: TPanel;
    Label11: TLabel;
    Label12: TLabel;
    Rectangle2: TRectangle;
    Image1: TImage;
    Panel4: TPanel;
    Label5: TLabel;
    Label6: TLabel;
    Rectangle5: TRectangle;
    Image3: TImage;
    Panel5: TPanel;
    Label7: TLabel;
    Label8: TLabel;
    Rectangle4: TRectangle;
    Image4: TImage;
    Panel6: TPanel;
    Label9: TLabel;
    Label10: TLabel;
    Rectangle3: TRectangle;
    Image5: TImage;
    Panel7: TPanel;
